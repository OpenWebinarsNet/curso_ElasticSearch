<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:elasticsearch="http://www.springframework.org/schema/data/elasticsearch"
       xsi:schemaLocation="http://www.springframework.org/schema/data/elasticsearch http://www.springframework.org/schema/data/elasticsearch/spring-elasticsearch-1.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <bean name="mainBean" class="camisetastematicas.es.GestionCamisetas"/>
    <bean name="servicio" class="camisetastematicas.es.servicio.InterfazElasticsearch"/>

    <!-- crear datos en carpeta 'data' dentro de proyecto -->
    <!--<elasticsearch:node-client id="client" local="true"/>-->

    <!-- llevar a elasticsearch -->
    <elasticsearch:repositories base-package="camisetastematicas.es"/>
    <elasticsearch:transport-client id="client"/>
    <bean name="elasticsearchTemplate" class="org.springframework.data.elasticsearch.core.ElasticsearchTemplate">
        <constructor-arg name="client" ref="client"/>
    </bean>
</beans>